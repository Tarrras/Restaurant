<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@drawable/layout_bg"
                                                   tools:context=".fragments.BottomFragment">


    <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/ic_person_pin_circle_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:id="@+id/circleImageView"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/divider"/>

    <!-- TODO: Update blank fragment layout -->
    <TextView
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:text="Адрес" android:id="@+id/textView2"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:textAlignment="textStart"
            android:gravity="start|left|center_vertical" android:textColor="#FF5252" android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/circleImageView" android:layout_marginStart="12dp"/>


    <TextView
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:text="Время работы" android:id="@+id/textView4"
            android:textAlignment="textStart"
            android:gravity="start|left|center_vertical" android:textColor="#FF5252" android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/circleImageView2" android:layout_marginStart="12dp"
            app:layout_constraintTop_toBottomOf="@+id/divider" android:layout_marginTop="16dp"/>
    <TextView
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:text="Телефон" android:id="@+id/textView5"
            android:textAlignment="textStart"
            android:gravity="start|left|center_vertical" android:textColor="#FF5252" android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/circleImageView3" android:layout_marginStart="12dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/divider2"/>
    <TextView
            android:text="TextView"
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:id="@+id/address_tv_fragment"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="108dp"
            android:gravity="center" android:textColor="#090808" android:textAlignment="textStart"
            android:textSize="20sp"
            android:layout_marginTop="4dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toEndOf="@+id/circleImageView" android:layout_marginStart="12dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:id="@+id/time_tv_fragment"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="108dp"
            android:gravity="center" android:textColor="#090808" android:textAlignment="textStart"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/circleImageView2" android:layout_marginStart="12dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/ic_access_time_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" android:id="@+id/circleImageView2"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toTopOf="@+id/divider2"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/divider"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/ic_phone_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/divider2"
            android:layout_marginTop="8dp" android:id="@+id/circleImageView3" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/open_map_tv" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

    <com.google.android.material.button.MaterialButton
            android:theme="@style/MaterialTheme"
            app:cornerRadius="15dp"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_gravity="bottom"
            android:background="@color/primary_dark"
            android:text="Показать на карте"
            android:layout_width="317dp"
            android:layout_height="42dp"
            android:id="@+id/open_map_tv"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/phone_tv_fragment"/>
    <View
            android:id="@+id/divider"
            android:layout_width="395dp"
            android:layout_height="1dp"
            android:background="#FF5252"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/address_tv_fragment" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <View
            android:id="@+id/divider2"
            android:layout_width="395dp"
            android:layout_height="1dp"
            android:background="#FF5252"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/time_tv_fragment" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            app:layout_constraintHorizontal_bias="0.0"
            android:text="TextView"
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:id="@+id/phone_tv_fragment" app:layout_constraintStart_toEndOf="@+id/circleImageView3"
            android:layout_marginStart="12dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="108dp" android:textSize="20sp" android:textColor="@color/black"
            android:textAlignment="textStart"/>
</androidx.constraintlayout.widget.ConstraintLayout>